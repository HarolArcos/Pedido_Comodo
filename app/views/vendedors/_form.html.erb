<head>
  <link href='https://fonts.googleapis.com/css?family=Comfortaa' rel='stylesheet'>
<style>
  body {
    font-family: 'Comfortaa';font-size: 22px;
  }
</style>

</head>
<body>



<h1 align="center" style="margin-top: 78px"><b>REGISTRAR VENDEDOR</b></h1>
<br><br>
  <div class="conteiner" align="center">
<%= form_with(model: vendedor) do |form| %>
  <% if vendedor.errors.any? %>
    <div style="color: red">
      

      <ul>
        <% @vendedor.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<br><br>




<div class="container ">

<div class="row ">
    
    
      <div class="col-lg-4"  ><br>
          
  
           <label for="validationCustom01" class="form-label " >Nombre</label>
           <br>
           <%= form.text_field :Nombre ,:style=>"background-color: #C4C4C4 ; border:0" %>
           
      </div>
  
      <div class="col-lg-4" style:"padding: 0px 50px" ><br>
          <label for="validationCustom02" class="form-label"  >Apellido Paterno</label>
          <br>
          <%= form.text_field :Apellido_Paterno  ,:style=>"background-color: #C4C4C4 ; border:0" %>
      </div>
    
        <div class="col-lg-4"  ><br>

          <label for="validationCustom03" class="font-label" style="margin: 0px 0px 8px" >Apellido Materno</label>
          
          <br>
          <%= form.text_field :Apellido_Materno ,:style=>"background-color: #C4C4C4 ; border:0" %>
        </div>
    
        

        <div class="col-lg-4" style:"padding: 0px 50px" ><br>

  
          <label for="validationCustom03" class="form-label" style: "display: block">Teléfono</label>
          <br>
  
          <%= form.phone_field :Telefono ,:style=>"background-color: #C4C4C4 ; border:0" %>
        </div>
   
        <div class="col-lg-4" style:"padding: 0px 50px" ><br>

  
          <label for="validationCustom02" class="form-label" style: "display: block" >Mail</label>
          <br>
          <%= form.text_field :Mail  ,:style=>"background-color: #C4C4C4 ; border:0" %>
        </div>
  
        <div class="col-lg-4" style:"padding: 0px 50px" ><br>
  
          <label for="validationCustom05" class="form-label" style: "display: block">Dirección</label>
          <br>
          <%= form.text_field :Direccion  ,:style=>"background-color: #C4C4C4 ; border:0" %>
        </div>
    </div>
</div>
<br><br><br><br>




<div class="conteiner" align="center">
  
    <label class="btn btn-primary" type="submit" style="background-color: #F79206; border:0;">
    Seleccionar Imagen
    <span style="display:none;">
      <%= form.file_field :imagen, id: "fileUploader"%>
    </span>
    </label>
  

    
  
  <div><br>
    <a href="/vendedors" class="btn btn-primary" style="background-color: #F79206; font-size: 22px; border: 0;">Cancelar</a>
    <button class="btn btn-primary" type="submit" style="background-color: #F79206; font-size: 22px; border: 0;">Agregar Vendedor</button>
    
    <div>
  

    </div>
   </div>
   <% end %>
   </div>










   

</div> 
</body>

