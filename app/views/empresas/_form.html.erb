          <%= form.text_field :codigo ,:style=>"background-color: #C4C4C4 ; border:0" %>
          <div style="color: red">
          
          <% @empresa.errors[:codigo].each do | msg| %>
            <p><%= msg %></p>
            <% end %>
          </div>
          </div>
    
        <div class="col-lg-4"  ><br>

        <label for="validationCustom03" class="font-label" style="position:relative;left:-83px;margin: 0px 0px 8px">Teléfono</label>
          
          <br>
          <%= form.phone_field :telefono ,:style=>"background-color: #C4C4C4 ; border:0" %>
          <div style="color: red">
          
          <% @empresa.errors[:telefono].each do | msg| %>
            <p><%= msg %></p>
            <% end %>
          </div>
          </div>
    
        

        <div class="col-lg-4"  ><br>

  
        <label for="validationCustom03" class="form-label" style="position:relative;left:-80px" style: "display: block">Dirección</label>
          <br>
  
          <%= form.text_field :direccion ,:style=>"background-color: #C4C4C4 ; border:0",:placeholder => "https://goo.gl/maps/..." %>
          <div style="color: red">
          
          <% @empresa.errors[:Dirección].each do | msg| %>
            <p><%= msg %></p>
            <% end %>
          </div>
          </div>
    </div>
</div>

<br><br><br><br>




