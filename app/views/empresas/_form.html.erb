            <% @empresa.errors[:Nombre].each do | msg| %>
              <p><%= msg %></p>
              <% end %>
            </div>
      </div>
  
      <div class="col-lg-4"  ><br>
      <label for="validationCustom02" class="form-label" style="position:relative;left:-112px"  >NIT</label>
