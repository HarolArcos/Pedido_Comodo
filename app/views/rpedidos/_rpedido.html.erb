    <% b=0%>
    <div class="container-fluid" style="width: 90%;">
      <div class="row row-cols-4">
            <div style="padding: 10px; text-align: center; border: 1px #212529 solid;">
                Nombre producto
            </div>
            <div style="padding: 10px; text-align: center; border: 1px #212529 solid;">
                Precio unitario
            </div>
            <div style="padding: 10px; text-align: center; border: 1px #212529 solid;">
                Cantidad
            </div>
            <div style="padding: 10px; text-align: center; border: 1px #212529 solid;">
                Precio total
            </div>
            <%lost = rpedido.detallep%>
            <%lost.each do |deta| %>
              <div style="padding: 10px; text-align: center; border: 1px #212529 solid;">
                <%= deta.catalogo.nombre%>
              </div>
              <div style="padding: 10px; text-align: center; border: 1px #212529 solid;">
              <%= deta.catalogo.precio%>
              </div>
              <div style="padding: 10px; text-align: center; border: 1px #212529 solid;">
              <%= deta.cantidad%>
              </div>
              <% a= deta.catalogo.precio.to_i*deta.cantidad.to_i%>
              <% b=b+a%>
              <div style="padding: 10px; text-align: center; border: 1px #212529 solid;">
              <%= a%>
              </div>
            <%end%>
            
            
      </div>
    </div>
</body>

