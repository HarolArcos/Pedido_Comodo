<div class="container d-flex justify-content-center " align="center" >

  <div class="row d-flex align-self-center justify-content-center ">
  <div class="col-lg-6"  ><br>
          
  
           <label for="validationCustom01" class="form-label  " style="position:relative;left:-88px" >Nombre</label>
           <br>
           <%= form.text_field :Nombre ,:style=>"background-color: #C4C4C4 ; border:0" %>
          <div style="color: red">
          <% @rventum.errors[:Nombre].each do | msg| %>
            <p><%= msg %></p>
          <% end %>
          </div>

           
           
      </div>

  <div class="col-lg-6"  ><br>
          <label for="validationCustom02" class="form-label" style="position:relative;left:-61px"  >Responsable</label>
          <br>
          <%= form.text_field :Responsable ,:style=>"background-color: #C4C4C4 ; border:0" %>
          <div style="color: red">
          <% @rventum.errors[:Responsable].each do | msg| %>
            <p><%= msg %></p>
            <% end %>
            </div>
      </div>

  <div class="col-lg-6"  ><br>

  
          <label for="validationCustom03" class="form-label" style="position:relative;left:-84px" style: "display: block">Teléfono</label>
          <br>
  
          <%= form.number_field :Telefono ,:style=>"background-color: #C4C4C4 ; border:0" %>
          <div style="color: red">
          <% @rventum.errors[:Telefono].each do | msg| %>
            <p><%= msg %></p>
            <% end %>
            </div>
        </div>
 

  <div class="col-lg-6"  ><br>

  
          <label for="validationCustom02" class="form-label" style="position:relative;left:-110px" style: "display: block">Mail</label>
          <br>
  
          <%= form.phone_field :Mail ,:style=>"background-color: #C4C4C4 ; border:0" %>
          <div style="color: red">
          <% @rventum.errors[:Mail].each do | msg| %>
            <p><%= msg %></p>
            <% end %>
            </div>
        </div>

  <div class="col-lg-6"  ><br>
  
          <label for="validationCustom05" class="form-label" style="position:relative;left:-81px" style: "display: block">Dirección</label>
          <br>
          <%= form.text_field :Direccion  ,:style=>"background-color: #C4C4C4 ; border:0",:placeholder => "https://goo.gl/maps/..." %>
          <div style="color: red">
          <% @rventum.errors[:Direccion].each do | msg| %>
            <p><%= msg %></p>
            <% end %>
            </div>
  </div>
</div>
</div>

<br><br>

  <div class="conteiner" align="center">
  
  <meta charset="utf-8">
  <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
  <style>
     
      #listFile {                
          font-size:22px;
          margin:5px 0px;
      }
      form {
          margin:10px;
      }
  </style>
  <script>
      $(document).ready(function(){    

          // Cuando se modifique el input type=file se pone el nombre del
          // archivo seleccionado en el div listFile
          $("#rventum_imagen").change(function(){
              if($(this).val())
              {
                  // Si tiene valor, se muestra en div
                  $("#listFile").html($(this).val());
              }else{
                  // Si no tiene valor, se muestran los puntos ...
                  $("#listFile").html("");
              }
          });
      });
  </script>
</head>



  

  

      
